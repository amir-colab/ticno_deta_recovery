#:import Window kivy.core.window.Window
#:import MDBoxLayout kivymd.uix.boxlayout.MDBoxLayout
#:import MDToolbar kivymd.uix.toolbar.MDToolbar
<PreSplashScreen>:
    BoxLayout:
        orientation: 'vertical'
        Image:
            source: 'assets/presplash.png'  # Replace with your image path
            allow_stretch: True
            keep_ratio: False

<SplashScreen>:
    BoxLayout:
        orientation: 'vertical'
        MDLabel:
            text: "Welcome to TICNO Data Recovery"
            halign: "center"
        MDProgressBar:
            id: progress_bar
            value: 50
            size_hint_y: None
            height: dp(4)
            
<HomePage>:
    BoxLayout:
        orientation: 'vertical'
        
        MDToolbar:
            title: "Ticno Data Recovery"
            md_bg_color: 0.27, 0.55, 1, 1  # Blue (#468DFF)
            specific_text_color: 1, 1, 1, 1  # White text
            elevation: 10

        Image:
            source: 'assets/icon.png'
            size_hint: (1, 0.4)

        MDLabel:
            text: 'Ticno Data Recovery'
            halign: 'center'
            theme_text_color: "Primary"

        MDFillRoundFlatButton:
            text: 'Start Data Recovery'
            pos_hint: {'center_x': 0.5}
            on_release: app.sm.current = 'recovery'
            md_bg_color: 0.27, 0.55, 1, 1
            text_color: 1, 1, 1, 1

        AdsBanner:
            size_hint: (1, 0.2)

        MDToolbar:
            md_bg_color: 0.27, 0.55, 1, 1
            specific_text_color: 1, 1, 1, 1
            elevation: 10

<RecoveryPage>:
    BoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: "Select Recovery Source"
            md_bg_color: 0.27, 0.55, 1, 1
            specific_text_color: 1, 1, 1, 1
            elevation: 10

        MDLabel:
            text: 'Choose the source to recover files from:'
            halign: 'center'

        MDBoxLayout:
            orientation: 'horizontal'
            size_hint: (1, None)
            height: dp(48)
            MDRaisedButton:
                text: 'List View'
                group: 'view'
                on_release: root.view_mode('list')
                md_bg_color: 0.39, 0.71, 0.96, 1
            MDRaisedButton:
                text: 'Grid View'
                group: 'view'
                on_release: root.view_mode('grid')
                md_bg_color: 0.39, 0.71, 0.96, 1

        MDFillRoundFlatButton:
            text: 'Start Scanning'
            pos_hint: {'center_x': 0.5}
            md_bg_color: 0.27, 0.55, 1, 1
            text_color: 1, 1, 1, 1

        MDProgressBar:
            id: progress_bar
            value: 0

        RecycleView:
            id: file_list
            viewclass: 'MDLabel'
            RecycleBoxLayout:
                orientation: 'vertical'
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height

        MDFillRoundFlatButton:
            text: 'Stop Scanning'
            pos_hint: {'center_x': 0.5}
            md_bg_color: 0.27, 0.55, 1, 1
            text_color: 1, 1, 1, 1
